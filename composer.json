    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.17"
    },
    "require": {
        "ext-pdo": "*"
    },
    "scripts": {
        "start:linux": [
            "Composer\\Config::disableProcessTimeout",
            "bin/run-server.sh"
        ],
        "test:cs": [
            "php vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "fix:cs": [
            "php vendor/bin/php-cs-fixer fix"
        ],
        "start:win": [
            "Composer\\Config::disableProcessTimeout",
            "bin/run-server.bat"
        ],
        "start": [
            "@start:linux"
        ]
    }
}
